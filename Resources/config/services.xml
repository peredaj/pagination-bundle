<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="peredaj_pagination.template">PeredajPaginationBundle::layout.html.twig</parameter>
    </parameters>

    <services>
        <service id="peredaj.paginator.twig_extension" class="Peredaj\PaginationBundle\Twig\Extension\PaginationTwigExtension">
            <argument>%peredaj_pagination.template%</argument>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
